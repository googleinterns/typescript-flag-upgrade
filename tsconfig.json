{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDir": ".",
    "outDir": "build",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "sourceMap": true,
  },
  "include": ["src/**/*.ts"]
}
